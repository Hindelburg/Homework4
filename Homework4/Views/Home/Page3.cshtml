
@{
    ViewBag.Title = "Page3";
}

<h1>Loan Calculator</h1>

<!--Collects information for interest calculations, calls Page3-->
<form method="post" action="Page3">
    <label for="amount">Loan Amount</label>
    <input type="number" step="0.01" name="amount" value="" />
    <label for="iRate">Interest Rate</label>
    <input type="number" step="0.01" name="iRate" value="" />
    <label for="tLength">Term Length</label>
    <input type="number" step="0.01" name="tLength" value="" />
    <input type="submit" name="submit" value="Submit" />
</form>

<!--Gets the answers from the viewbag.-->
<p>
    Total: @ViewBag.Total
    <br />
    Monthly: @ViewBag.Month
</p>